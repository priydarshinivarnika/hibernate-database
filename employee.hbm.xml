<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.common.details.EmployeeData" table="EMP">
		<meta attribute="class-description">This class contains the employee detail.</meta>
		<id name="empId" type="int" column="empId">
			<generator class="increment"></generator>
		</id>

		<property name="empFirstName" column="Employee_FirstName" type="string" />
		<property name="empLastName" column="Employee_LastName" type="string" />
		<property name="empDepartment" column="Employee_Department" type="string" />

	</class>

</hibernate-mapping>  